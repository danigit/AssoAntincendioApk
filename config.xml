<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ZMSoftware.PhoenixApp" version="2.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Asso Antincendio</name>
    <description>
        Programma per la visualizzazione delle fatture, contratti, rapporti e altre informazioni, da parte dei clienti.
    </description>
    <author email="massimiliano.zirilli@gmail.com" href="https://www.facebook.com/maxzirilli">
        Daniel Surpanu
    </author>
    <icon src="res/Icona.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://www.assoantincendio.com/areaclienti/Asso/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
</widget>
